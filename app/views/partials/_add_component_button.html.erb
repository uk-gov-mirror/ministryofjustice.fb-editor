              <%# end %>
            <%# /ul %>
          <%# /li %>

          <%# This line is MVP version only (only outputs single content) %>
          <li data-action="content"><a href="#add_component"><%= t('components.menu.content_area') %></a></li>
        <% end %>
      </ul>
      <a class="fb-govuk-button fb-govuk-button-inverted" href="#add-input-component"><%= t('components.actions.add_component') %></a>
    </div>
